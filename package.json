{
  "name": "nest-app",
  "version": "0.0.1",
  "description": "Boilerplate with Angular frontend and NestJS backend",
  "author": "Anshul Saini",
  "private": true,
  "license": "CC0",
  "keywords": [
    "angular",
    "angular 13",
    "nest",
    "nest 8",
    "nodejs",
    "typescript",
    "eslint",
    "scss",
    "concurrently",
    "jest"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "ng": "ng",
    "format": "prettier --write \"client/**/*.ts\" \"server/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{client,server,test}/**/*.ts\" --fix",
    "build": "concurrently -n SERVER,CLIENT \"nest build\" \"ng build\"",
    "start": "concurrently -n SERVER,CLIENT \"nest start\" \"npm run ng:serve:dev\"",
    "start:debug": "concurrently -n SERVER,CLIENT \"nest start --debug --watch\" \"npm run ng:serve:dev\"",
    "start:prod:server": "node dist/server/main",
    "ng:serve": "ng serve",
    "ng:serve:dev": "ng serve --proxy-config proxy.conf.json -c development",
    "test:ut": "jest",
    "test:all": "concurrently -n SERVER-UT,SERVER-E2E,CLIENT \"jest\" \"jest --config ./test/jest-e2e.json\" \"ng test\"",
    "test:ng": "ng test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "concurrently -n SERVER-E2E,CLIENT \"jest --config ./test/jest-e2e.json\" \"ng test\""
  },
  "dependencies": {
    "@angular/animations": "~13.1.0",
    "@angular/common": "~13.1.0",
    "@angular/compiler": "~13.1.0",
    "@angular/core": "~13.1.0",
    "@angular/forms": "~13.1.0",
    "@angular/platform-browser": "~13.1.0",
    "@angular/platform-browser-dynamic": "~13.1.0",
    "@angular/router": "~13.1.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "~7.4.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.1.2",
    "@angular/cli": "~13.1.2",
    "@angular/compiler-cli": "~13.1.0",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^6.5.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jasmine-core": "~3.10.0",
    "jest": "^27.2.5",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "~4.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
